# 常规设置
[common]
enable_network_accelerator = true  # 是否启用针对中国大陆的加速链接(仅在 user.server 不为 china 时有效)
app_version = "4.50.0"  # 指定 url 参数中提交的 app 版本号, 一般保持默认即可

# 用户设置
# 请在下方填写您的账号凭据
[user]
username = ""  # 用户名, 通常是邮箱
password = ""
uid = 0  # 初次使用保持现状即可, 无需设置
remember_token = ""  # 初次使用保持现状即可, 无需设置
server = "auto"  # 用户所属的服务器 可选参数 auto -> 自动判断  china -> 中国大陆  global -> 全球

# 通过模拟观看广告免费删除植树记录
[remove_plants_by_rewarded_ad]
enable = false # 开关

# 通过模拟观看广告获取双倍金币
[boost_plant_by_rewarded_ad]
enable = false

# 自动植树(刷金币)
[auto_plant]
enable = false
by_time_frame = false
number = 100  # 仅在 by_time_frame 关闭时有效

# 手动植树
[manually_plant]
enable = true

# 创建房间(一起种)
[create_room]
enable = false

# 完成任务后自动登出
[auto_logout]
enable = false